import java.util.*;
import java.util.Scanner;

public class Main {
  public static void main(String[] args)
  {

    int again = 1;
    int i = 0;
    
    while ( again == 1) 
    {
      do
      {
          System.out.println("Pour convertir de Celsius vers Fahrenheit tapez 1 \n Pour convertir de Fahrenheit vers Celsius tapez 0 ");
          Scanner sc = new Scanner(System.in);
          i = sc.nextInt();

          if (i == 1) 
          {
             Scanner sc2 = new Scanner(System.in);
             System.out.println("Temperature a convertir");
             int t = sc2.nextInt();
             double result = (9/5)*t + 32;
             System.out.println(result + "Fahrenheit");
          }

          else if (i == 0) 
          {
             Scanner sc3 = new Scanner(System.in);
             System.out.println("Temperature a convertir");
             int t = sc3.nextInt();
             double result = (( (t-32)*5)/9);
             System.out.println(result + "Celsius");
          }

      }
       while ( i != 1 && i !=0);
          System.out.println (" Souhaitez-vous recommencer ? 1- Oui /2- Non");
          Scanner sc4 = new Scanner(System.in);
          again = sc4.nextInt();
    }
     System.out.println("Bye bye");
          
}
}
