import java.util.*;
import java.util.Scanner;

public class Main {
  public static void main(String[] args)
  {

    String again = "O";
    int i = 0;
    
    while ( again == "O") 
    {
      do
      {
          System.out.println("Si vous souhaitez convertir de Celsius vers Fahrenheit tapez 1 Dans l'autre sens tapez 0 ");
          Scanner sc = new Scanner(System.in);
          i = sc.nextInt();

          if (i == 1) 
          {
             Scanner sc2 = new Scanner(System.in);
             System.out.println("Ecrivez la température");
             int t = sc2.nextInt();
             double result = (9/5)*t + 32;
             System.out.println(result + "Fahrenheit");
          }

          else if (i == 0) 
          {
             Scanner sc3 = new Scanner(System.in);
             System.out.println("Ecrivez la température");
             int t = sc3.nextInt();
             double result = (( (t-32)*5)/9);
             System.out.println(result + "Celsius");
          }

      }
       while ( i != 1 && i !=0);
          System.out.println (" Souhaitez-vous recommencer ? O/N");
          Scanner sc4 = new Scanner(System.in);
          again = sc4.nextLine();
    }
     System.out.println("Bye bye");
     break;
          
}
}
