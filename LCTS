  {
    Scanner sc = new Scanner(System.in);
    char again = "O";
    int i = 0;
    
      do
      {
        if ( again == "O") 
        {
          System.out.println("Si vous souhaitez convertir de Celsius vers Fahrenheit tapez 1 Dans l'autre sens tapez 0 ");
