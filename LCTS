             System.out.println(result + "Fahrenheit");
          }

          else if (i == 0) 
          {
             Scanner sc3 = new Scanner(System.in);
             System.out.println("Ecrivez la température");
             int t = sc3.nextInt();
             double result = (( (t-32)*5)/9);
             System.out.println(result + "Celsius");
          }
          System.out.println (" Souhaitez-vous recommencer ? O/N");
          Scanner sc4 = new Scanner(System.in);
          String str = sc4.nextLine();
          char again = str.charAt(0);
        }
        else 
        {
          Systeme.out.println("Bye bye");
